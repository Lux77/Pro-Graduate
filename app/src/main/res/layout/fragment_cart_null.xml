<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/cartInfo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        >

        <TextView
            android:id="@+id/cartMark"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="购物车"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/info_icon"
            android:id="@+id/infoIcon"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_alignEnd="@id/cartInfo"
        android:layout_alignRight="@id/cartInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="133dp"
            android:layout_height="60dp"
            android:src="@mipmap/guide_cart"
            android:layout_weight="2.56"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="购物车空空如也，去买些好货吧！"/>
    </LinearLayout>
</RelativeLayout>